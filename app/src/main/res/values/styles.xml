<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="itemTitle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="fontFamily">@font/roboto_regular_400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regularFontSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="itemTitleMarquee" parent="itemTitle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="itemSubtitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_regular_400</item>
        <item name="android:textSize">@dimen/smallFontSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grayFontColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="itemSubtitleMarquee" parent="itemSubtitle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="RoundedCorner12" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedCorner28" parent="">
        <item name="cornerSize">28dp</item>
    </style>

    <style name="RoundedCorner1000" parent="">
        <item name="cornerSize">1000dp</item>
    </style>

    <style name="circularCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="seekbarDurationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">00:00</item>
        <item name="android:textColor">@color/grayFontColor</item>
        <item name="android:textSize">@dimen/extraSmallFontSize</item>
    </style>

    <style name="AlbumImageViewStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">visible</item>
        <item name="shapeAppearanceOverlay">@style/RoundedCorner28</item>
        <item name="android:src">@drawable/no_music_icon</item>
    </style>


    <style name="ArtistImageViewStyle" parent="AlbumImageViewStyle">
        <item name="shapeAppearanceOverlay">@style/circularCorner</item>
    </style>


    <style name="AnimationDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogStyle</item>
    </style>

    <style name="DialogStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="rcyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="imageButtonClickableStyle">
        <item name="android:background">"?android:selectableItemBackgroundBorderless"</item>
    </style>

</resources>